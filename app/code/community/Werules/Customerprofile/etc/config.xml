<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Werules_Customerprofile>
			<version>0.0.1</version>
		</Werules_Customerprofile>
	</modules>
	<frontend>
		<layout>
			<updates>
				<werules_customerprofile module="werules_customerprofile">
					<file>werules_customerprofile.xml</file>
				</werules_customerprofile>
			</updates>
		</layout>	
		<routers>
			<customerprofile>
				<use>standard</use>
				<args>
					<module>Werules_Customerprofile</module>
					<frontName>customerprofile</frontName>
				</args>
			</customerprofile>
		</routers>
	</frontend>
	
	<global>
		<models>
			<customerprofile>
				<class>Werules_Customerprofile_Model</class>
				<resourceModel>customerprofile_mysql4</resourceModel>
			</customerprofile>
			<customerprofile_mysql4>
				<class>Werules_Customerprofile_Model_Mysql4</class>
				<entities>
					<profile>
						<table>wr_customerprofile</table>	<!-- Actual table name in sql	-->
					</profile>
				</entities>
			</customerprofile_mysql4>
		</models>
		<helpers>
			<werules_customerprofile>
				<class>Werules_Customerprofile_Helper</class>
			</werules_customerprofile>
		</helpers>
		<resources>
			<customerprofile_setup>
				<setup>
					<module>Werules_Customerprofile</module>
					<class>Mage_Customer_Model_Resource_Setup</class>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</customerprofile_setup>
			<customerprofile_write>
				<connection>
					<use>core_write</use>
				</connection>
			</customerprofile_write>
			<customerprofile_read>
				<connection>
					<use>core_read</use>
				</connection>
			</customerprofile_read>
		</resources>		 
	</global>
	
	<adminhtml>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<customerprofile_options>
											<title>Custom Configuration Section</title>
										</customerprofile_options>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
</config>