<?xml version="1.0"?>
<config>
	<tabs>
		<werules_customerprofile translate="label" module="werules_customerprofile">
			<label>Customer Profile</label>
			<sort_order>1</sort_order>
		</werules_customerprofile>
	</tabs>
	 
	<sections>
		<customerprofile_options translate="label" module="werules_customerprofile">
			<label>Customer Profile Settings</label>
			<tab>werules_customerprofile</tab>
			<frontend_type>text</frontend_type>
			<sort_order>1</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<section_one translate="label">
					<label>Configurations</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>				
					<fields>
						<profile_prefix>
							<label>Profile URL Prefix</label>
							<frontend_type>text</frontend_type>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>This is the prefix for the profile URL. e.g. mystore.com/URLPREFIX/nickname.html. Save this once, and don't change it, otherwise it can break other user profiles URLs. Alphanumeric only!</comment>				   
						</profile_prefix>
						<custom_field_one>
							<label>Customer Avatar</label>
							<frontend_type>select</frontend_type>
							<source_model>customerprofile/options</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Enable Customer Avatar</comment>
						</custom_field_one>
						<custom_field_two>
							<label>Customer Level</label>
							<frontend_type>select</frontend_type>
							<source_model>customerprofile/options</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Enable Customer Level</comment>
						</custom_field_two>
						<custom_field_three>
							<label>Customer Birthday</label>
							<frontend_type>select</frontend_type>
							<source_model>customerprofile/options</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Enable Customer Birthday</comment>
						</custom_field_three>
						<custom_field_four>
							<label>Customer Wishlist</label>
							<frontend_type>select</frontend_type>
							<source_model>customerprofile/options</source_model>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Enable Customer Wishlist</comment>
						</custom_field_four>
						<custom_field_five>						
							<label>Customer Last Purchased Products</label>
							<frontend_type>select</frontend_type>
							<source_model>customerprofile/options</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Enable Customer Last Purchased Products</comment>
						</custom_field_five>
					</fields>
				</section_one>
			</groups>				
		</customerprofile_options>
	</sections>
</config>